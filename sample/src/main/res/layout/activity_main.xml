<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:circlesButton="http://schemas.android.com/apk/res-auto"
             android:background="@drawable/bg_main_activity">


    <mx.com.pegasus.RippleCircleButton
        android:id="@+id/rippleCircleButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        circlesButton:animationDuration="3000"

        circlesButton:mainCircleBackgroundImage="@drawable/ic_power_settings_new_blue_700_48dp"
        circlesButton:mainCircleBackgroundImageSize="@dimen/_70sdp"
        circlesButton:mainCircleColor="#FFFFFFFF"
        circlesButton:mainCircleSize="@dimen/_40sdp"
        circlesButton:secondaryCirclesAnimation="randomly"
        circlesButton:secondaryCirclesColor="#FFFFFF"
        circlesButton:secondaryCirclesNumber="4"
        />

</FrameLayout>
